generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String         @id @default(uuid())
  firstName            String
  lastName             String
  email                String         @unique
  password             String
  phone                String?
  position             String?
  departmentId         String?
  role                 Role           @default(JUNIOR)
  isActive             Boolean        @default(true)
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  pricingPerHour       Decimal?       @db.Decimal(10, 2)
  createdDocuments     Document[]     @relation("DocumentCreator")
  responsibleDocuments Document[]     @relation("DocumentResponsable")
  uploadedFiles        File[]
  issuedInvoices       Invoice[]      @relation("InvoiceIssuedBy")
  notifications        Notification[]
  generatedReports     Report[]
  assignedTasks        Task[]         @relation("TaskAssignee")
  createdTasks         Task[]         @relation("TaskCreator")
  tasks                Task[]
  timeEntries          TimeEntry[]
  department           Department?    @relation(fields: [departmentId], references: [id])
  managedDepartments   Department[]   @relation("DepartmentManager")
  auditLogs            AuditLog[]

  @@map("users")
}

model Department {
  id          String     @id @default(uuid())
  name        String     @unique
  colorHex    String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  documents   Document[]
  users       User[]
  managers    User[]     @relation("DepartmentManager")

  @@map("departments")
}

model Client {
  id          String     @id @default(uuid())
  name        String
  email       String     @unique
  phone       String?
  companyName String?
  address     String?
  city        String?
  country     String?
  vatNumber   String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  documents   Document[]
  invoices    Invoice[]

  @@map("clients")
}

model Referent {
  id        String     @id @default(uuid())
  name      String
  email     String?
  phone     String?
  company   String?
  position  String?
  address   String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  documents Document[]

  @@map("referents")
}

model Document {
  id            String         @id @default(uuid())
  title         String
  reference     String         @unique
  type          String
  description   String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  referentId    String?
  responsableId String?
  creatorId     String?
  clientId      String?
  budgetAmount  Decimal?       @db.Decimal(14, 2)
  departmentId  String?
  status        DocumentStatus @default(ACTIVE)
  spent         Decimal?       @db.Decimal(14, 2)
  tags          String[]       @default([])
  auditLogs     AuditLog[]
  client        Client?        @relation(fields: [clientId], references: [id])
  creator       User?          @relation("DocumentCreator", fields: [creatorId], references: [id])
  department    Department?    @relation(fields: [departmentId], references: [id])
  referent      Referent?      @relation(fields: [referentId], references: [id])
  responsable   User?          @relation("DocumentResponsable", fields: [responsableId], references: [id])
  files         File[]
  invoices      Invoice[]
  lists         List[]
  reports       Report[]

  @@map("documents")
}

model List {
  id          String     @id @default(uuid())
  name        String
  description String?
  documentId  String
  status      ListStatus @default(OPEN)
  dueDate     DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  document    Document   @relation(fields: [documentId], references: [id])
  tasks       Task[]

  @@map("lists")
}

model Task {
  id                 String      @id @default(uuid())
  title              String
  description        String?
  listId             String
  assigneeId         String?
  requestedAssignees String[]    @default([])
  maxTimeHours       Int?
  status             TaskStatus  @default(PENDING)
  dueDate            DateTime?
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  createdById        String?
  userId             String?
  assignee           User?       @relation("TaskAssignee", fields: [assigneeId], references: [id])
  createdBy          User?       @relation("TaskCreator", fields: [createdById], references: [id])
  list               List        @relation(fields: [listId], references: [id])
  user               User?       @relation(fields: [userId], references: [id])
  timeEntries        TimeEntry[]

  @@map("tasks")
}

model TimeEntry {
  id             String   @id @default(uuid())
  taskId         String
  collaboratorId String
  hoursSpent     Decimal  @db.Decimal(10, 2)
  description    String?
  date           DateTime @default(now())
  invoiced       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  invoiceId      String?
  collaborator   User     @relation(fields: [collaboratorId], references: [id])
  invoice        Invoice? @relation(fields: [invoiceId], references: [id])
  task           Task     @relation(fields: [taskId], references: [id])

  @@map("time_entries")
}

model Invoice {
  id              String        @id @default(uuid())
  reference       String        @unique
  amount          Decimal       @db.Decimal(14, 2)
  issueDate       DateTime      @default(now())
  dueDate         DateTime?
  paid            Boolean       @default(false)
  paymentDate     DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  documentId      String?
  clientId        String?
  issuedById      String?
  taxRate         Decimal?      @db.Decimal(5, 2)
  exportExcelPath String?
  exportPdfPath   String?
  notes           String?
  status          InvoiceStatus @default(DRAFT)
  client          Client?       @relation(fields: [clientId], references: [id])
  document        Document?     @relation(fields: [documentId], references: [id])
  issuedBy        User?         @relation("InvoiceIssuedBy", fields: [issuedById], references: [id])
  timeEntries     TimeEntry[]

  @@map("invoices")
}

model File {
  id           String    @id @default(uuid())
  name         String
  path         String
  mimeType     String
  size         Int
  uploadedById String
  createdAt    DateTime  @default(now())
  documentId   String?
  document     Document? @relation(fields: [documentId], references: [id])
  uploadedBy   User      @relation(fields: [uploadedById], references: [id])

  @@map("files")
}

model Report {
  id            String    @id @default(uuid())
  title         String
  content       String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  documentId    String?
  generatedById String?
  document      Document? @relation(fields: [documentId], references: [id])
  generatedBy   User?     @relation(fields: [generatedById], references: [id])

  @@map("reports")
}

