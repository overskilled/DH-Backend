model AuditLog {
  id          String      @id @default(uuid())
  action      AuditAction
  entity      AuditEntity
  entityId    String
  entityName  String
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  oldValues   Json?
  newValues   Json?
  ipAddress   String?
  userAgent   String?
  description String?
  createdAt   DateTime    @default(now())
  isSensitive Boolean     @default(false)
  document    Document?   @relation(fields: [documentId], references: [id])
  documentId  String?

  @@map("audit_logs")
}

model Notification {
  id        String   @id @default(uuid())
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@map("notifications")
}

enum Role {
  ADMIN
  ASSOCIATE
  SENIOR
  MID
  JUNIOR
  BOARD
}

enum DocumentStatus {
  ACTIVE
  ARCHIVED
  CLOSED
}

enum ListStatus {
  OPEN
  IN_PROGRESS
  COMPLETED
  CLOSED
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
  CANCELLED
  SUSPENDED
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  STATUS_CHANGE
  TIME_ENTRY_ADD
  INVOICE_GENERATE
  ASSIGN
  LOGIN
  LOGOUT
  EXPORT
}

enum AuditEntity {
  DOCUMENT
  TASK
  LIST
  TIME_ENTRY
  INVOICE
  USER
  CLIENT
  DEPARTMENT
}
